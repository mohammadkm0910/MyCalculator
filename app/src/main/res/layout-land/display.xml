<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="4dp">

    <com.mohammad.kk.mycalculator.views.ResizingEditText
        android:id="@+id/edtInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/DisplayEditText"
        android:cursorVisible="true"
        android:textIsSelectable="true"
        android:hint="@string/display"
        android:padding="16dp"
        app:maxTextSize="30sp"
        app:minTextSize="18sp"
        app:stepTextSize="2sp"
        android:textColor="@color/black"
        android:inputType="text"
        android:maxLines="1"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.mohammad.kk.mycalculator.views.ResizingEditText
        android:id="@+id/edtOutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/DisplayEditText"
        android:cursorVisible="false"
        android:textIsSelectable="false"
        android:inputType="none"
        android:maxLines="1"
        android:padding="16dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtInput" />
</androidx.constraintlayout.widget.ConstraintLayout>